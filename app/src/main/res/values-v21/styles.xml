<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="AppBaseTheme" parent="android:Theme.Material.Light">
    <!-- API 21 theme customizations can go here. -->

    <item name="android:windowContentTransitions">true</item>
    <item name="android:windowAllowEnterTransitionOverlap">false</item>
    <item name="android:windowAllowReturnTransitionOverlap">false</item>
    <item name="android:navigationBarColor">@color/appcolor_light_grey</item>
    <item name="android:statusBarColor">@color/appcolor_light_grey</item>

  </style>


  <style name="MaterialAnimations.TextAppearance.Title" parent="android:TextAppearance.Material.Title">
    <item name="android:textColor">?android:textColorPrimary</item>
  </style>

  <style name="MaterialAnimations.TextAppearance.Title.Inverse" parent="android:TextAppearance.Material.Title">
    <item name="android:textColor">?android:textColorPrimaryInverse</item>
  </style>

  <style name="AppTheme" parent="Theme.AppCompat.Light">
    <!-- Customize your theme here. -->

    <item name="colorPrimary">@color/app_window_bglight_color</item>
    <item name="colorPrimaryDark">@color/app_base</item>
    <item name="colorAccent">@color/app_window_bglight_color</item>
    <item name="android:windowBackground">@color/app_window_bglight_color</item>

    <item name="colorControlActivated">@color/app_base</item>
    <item name="colorControlNormal">@color/app_text_unimportant</item>
    <item name="colorControlHighlight">@color/app_base</item>


    <item name="android:textColor">@color/app_text_label</item>


    <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
    <item name="android:navigationBarColor">@color/appcolor_light_grey</item>

  </style>
</resources>